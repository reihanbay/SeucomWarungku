<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ContainerView">
        <item name="android:background">@color/white</item>
        <item name="android:padding">24dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="ContainerView2">
        <item name="android:background">@color/white</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="Button" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
<!--        <item name="fontFamily">@font/nunito_semibold</item>-->
        <item name="android:layout_height">wrap_content</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:backgroundTint">@color/yellow_500</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Outline" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/yellow_700</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">match_parent</item>
<!--        <item name="fontFamily">@font/nunito_semibold</item>-->
        <item name="android:layout_height">wrap_content</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/yellow_700</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="InputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
i        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="placeholderTextColor">@color/grey</item>

    </style>

    <style name="InputLayout.Password" >
        <item name="passwordToggleEnabled">true</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:padding">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <!--        <item name="android:fontFamily">@font/nunito_regular</item>-->
        <item name="android:inputType">text</item>
        <item name="android:imeOptions">actionDone</item>
    </style>
    <style name="EditText.Pass" >
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="EditText.Date" >
        <item name="android:inputType">date</item>
    </style>

    <style name="EditText.Time" >
        <item name="android:inputType">time</item>
    </style>
    <style name="EditText.Number" >
        <item name="android:inputType">number</item>
    </style>
    <style name="EditText.Textarea" >
        <item name="android:inputType">textMultiLine</item>
        <item name="android:minHeight">80dp</item>
    </style>


    <style name="TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
<!--        <item name="android:fontFamily">@font/nunito_regular</item>-->
    </style>

    <style name="TextView.Bold" >
<!--        <item name="android:fontFamily">@font/nunito_bold</item>-->
    </style>

    <style name="TextView.Header" >
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
<!--        <item name="android:fontFamily">@font/nunito_bold</item>-->
    </style>

    <style name="TextView.Header2" >
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
<!--        <item name="android:fontFamily">@font/nunito_bold</item>-->
    </style>

    <style name="TextView.Header3" >
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
<!--        <item name="android:fontFamily">@font/nunito_semibold</item>-->
    </style>

    <style name="TextView.Subheader2" >
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textColor">@color/grey</item>
<!--        <item name="android:fontFamily">@font/nunito_semibold</item>-->
    </style>
    <style name="TextView.Subheader2.sBold" >
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textColor">@color/grey</item>
        <!--        <item name="android:fontFamily">@font/nunito_semibold</item>-->
    </style>

    <style name="TextView.Subheader3">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textColor">@color/grey</item>
<!--        <item name="android:fontFamily">@font/nunito_regular</item>-->
    </style>

    <style name="TextView.Subheader3.sBold">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textColor">@color/grey</item>
<!--        <item name="android:fontFamily">@font/nunito_semibold</item>-->
    </style>

</resources>